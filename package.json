{
  "name": "cocoa-desktop",
  "version": "0.1.0",
  "private": true,
  "homepage": "./",
  "main": "public/electron.js",
  "dependencies": {
    "@material-ui/core": "^3.9.3",
    "@material-ui/icons": "^3.0.2",
    "@types/jest": "^24.0.13",
    "@types/node": "^12.0.2",
    "@types/react": "16.8.18",
    "@types/react-dom": "16.8.4",
    "@types/redux-logger": "^3.0.7",
    "auto-launch": "^5.0.5",
    "electron-is-dev": "^1.1.0",
    "express": "^4.17.1",
    "react": "^16.8.6",
    "react-dom": "^16.8.6",
    "react-scripts": "2.1.5",
    "redux-logger": "^3.0.6",
    "ts-node": "^8.6.2",
    "typeface-roboto": "^0.0.54",
    "typescript": "3.4.5"
  },
  "scripts": {
    "start": "rescripts start",
    "mock-server": "node mock_server/app.js",
    "build": "rescripts build",
    "test": "rescripts test",
    "eject": "react-scripts eject",
    "electron-dev": "concurrently \"BROWSER=none yarn start\" \"wait-on http://localhost:3000 && electron .\"",
    "package:mac": "yarn build && electron-builder --mac --x64",
    "package:windows": "yarn build && electron-builder --win --x64",
    "package:linux": "yarn build && electron-builder --linux --x64",
    "precommit": "lint-staged",
    "format": "prettier --write src/**/*.ts",
    "lint": "eslint -h tsconfig.json --fix"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@improbable-eng/grpc-web": "^0.9.5",
    "@rescripts/cli": "^0.0.10",
    "@rescripts/rescript-env": "^0.0.5",
    "@types/axios": "^0.14.0",
    "@types/classnames": "^2.2.7",
    "@types/google-protobuf": "^3.2.7",
    "@types/react-redux": "^7.0.9",
    "@types/redux": "^3.6.0",
    "@types/redux-saga": "^0.10.5",
    "axios": "^0.18.0",
    "concurrently": "^4.1.0",
    "electron": "^5.0.1",
    "electron-builder": "^22.4.0",
    "google-protobuf": "^3.8.0-rc.1",
    "grpc-web": "^1.0.4",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "prettier": "^1.17.1",
    "react-redux": "^7.0.3",
    "redux": "^4.0.1",
    "redux-devtools-extension": "^2.13.8",
    "redux-saga": "^1.0.2",
    "typesafe-actions": "^4.4.0",
    "wait-on": "^3.2.0"
  },
  "jest": {
    "moduleNameMapper": {
      "src(.*)$": "<rootDir>/src/$1"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 2,
    "jsxSingleQuote": true,
    "trailingComma": "es5",
    "printWidth": 100
  }
}
