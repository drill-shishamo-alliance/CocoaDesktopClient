{
  "name": "cocoa-desktop-client",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^3.9.2",
    "@material-ui/icons": "^3.0.2",
    "@types/redux": "^3.6.0",
    "@types/redux-saga": "^0.10.5",
    "react": "^16.8.5",
    "react-dom": "^16.8.5",
    "react-scripts-ts": "3.1.0",
    "redux": "^4.0.1",
    "redux-saga": "^1.0.2",
    "typeface-roboto": "^0.0.54"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "electron": "node_modules/.bin/electron .",
    "dev": "nf start -p 3000",
    "package:mac": "react-scripts-ts build && electron-builder --mac --x64",
    "package:windows": "react-scripts-ts build && electron-builder --win --x64",
    "package:linux": "react-scripts-ts build && electron-builder --linux --x64",
    "deploy": "node deploy.js",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "precommit": "lint-staged",
    "format": "prettier --write src/**/*.ts",
    "lint": "tslint -p tsconfig.json --fix"
  },
  "devDependencies": {
    "@types/jest": "^24.0.11",
    "@types/node": "^11.11.6",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "electron": "^4.1.1",
    "electron-builder": "^20.39.0",
    "foreman": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.16.4",
    "tslint-config-prettier": "^1.18.0",
    "tslint-plugin-prettier": "^2.0.1",
    "typescript": "^3.3.4000"
  },
  "homepage": "./",
  "main": "src/electron-starter.js",
  "build": {
    "productName": "CocoaDesktopClient",
    "appId": "cocoa.desktop",
    "files": [
      "./src/electron-starter.js",
      "./icon/**/*",
      "*.js",
      "build",
      "node_modules"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": "msi",
      "icon": "./icon/icon-256.ico"
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "npm run lint",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "jsxSingleQuote": true,
    "trailingComma": "none"
  }
}
